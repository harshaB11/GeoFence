<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/main_layout"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_button_default">

    <TextView
        android:id="@+id/deviceName"
        style="@style/BackgroundText.17"
        android:layout_width="230dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textAppearance="@style/BackgroundText.17"
        app:layout_constraintBottom_toTopOf="@+id/registeredTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="OnePlus 6T" />

    <TextView
        android:id="@+id/registeredTime"
        style="@style/LightBackgroundText.12"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceName"
        tools:text="Registered on: Jan 21, 2021"
        android:textColor="@color/mylistsubtitle"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/removeDeviceIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dust_bin"
        android:contentDescription="delete icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>